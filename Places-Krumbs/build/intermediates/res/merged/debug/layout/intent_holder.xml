<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:id="@+id/parent_layout">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/highligt_view">
        <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/emoji_bckgrnd_fill"
                android:visibility="invisible"
                android:background="@drawable/emoji_bckgrnd_fill_camera"
                android:layout_centerInParent="true"
                />
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/emoji_icon_view"
                android:layout_centerInParent="true"
                />
        <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/emoji_border"
                android:visibility="invisible"
                android:background="@drawable/emoji_border_ring_camera"
                android:layout_centerInParent="true"
                />
        <RelativeLayout
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_below="@id/emoji_icon_view"
                android:id="@+id/camera_tag_layout">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/camera_tag"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/k_small_camera"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:layout_width="60dp"
              android:id="@+id/intent_label"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:maxLines="1"
              android:padding="2dp"
              android:layout_marginTop="5dp"
              android:layout_below="@id/highligt_view"/>
</RelativeLayout>